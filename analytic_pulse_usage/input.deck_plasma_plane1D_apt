begin:output
  name = jj2
  file_prefix = jj2
  nstep_snapshot = ndump
  dump_first = T
  dump_last = F
  grid=always
  jy=always + single + snapshot
  jy_diff=always + single + snapshot
end:output

begin:output
  name = DF
  file_prefix = DF
  nstep_snapshot = ndump
  dump_first = T
  dump_last = F
  absorption = always
  total_energy_sum = always + species
end:output